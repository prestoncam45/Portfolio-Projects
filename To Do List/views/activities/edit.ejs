<% layout ('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Activity</h1>
        <div class="col-6 offset-3">
            <form action="/todolist/<%= activity._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="activity">Activity</label>
                    <input class="form-control" type="text" name="activity" id="activity"
                        value="<%= activity.activity %> " required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Activity</button>
                </div>
            </form>
            <a href="/todolist" class="btn btn-outline-primary">To Do List</a>
        </div>
    </div>